<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :autor, style: "display: block" %>
    <%= form.text_field :autor %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.select(:status, Book.statuses.keys.map { |b| [b.humanize, b] }, {}, {class:"form-select"}) %>
  </div>

  <div>
    <%= form.label :prestado, style: "display: block" %>
    <%= form.datetime_field :prestado %>
  </div>

  <div>
    <%= form.label :devuelto, style: "display: block" %>
    <%= form.datetime_field :devuelto %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
